<body>

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#directory"> Directory </a></li>
                <li class="tab col s6"><a class="active" href="#birthdays"> Birthdays </a></li>
            </ul>
        </div>
        <div id="directory" class="col s12">

            <button class='btn modal-trigger' data-target='addStudentModal' id='addStudent'> Add Student </button>

            {{!-- Add Student Modal Details --}}
            <div id="addStudentModal" class="modal">
                <div class="modal-content row">
                    <h4 class="center"> Add a Student </h4>
                    
                    <div class="input-field col s10 offset-s1">
                        <input type="text" id="aSName">
                        <label for="aSName"> Name </label>
                    </div>

                    <div class="input-field col s10 offset-s1">
                        <input type="text" class='gradepicker' data-target='aSGradePicker' id='aSGrade'>
                        <label for="aSGrade"> Grade </label>
                    </div>

                    <div class="input-field col s10 offset-s1">
                        <input type="text" class="datepicker" id="aSBirthday">
                        <label for="aSBirthday"> Birthday </label>
                    </div>

                    <div class="input-field col s10 offset-s1">
                        <input type="text" class="autocomplete" id="aSLocation">
                        <label for="aSLocation"> Location </label>
                    </div>

                    <div class="col s6 offset-s3">
                        <button class="btn" id="addStudentButton"> Add Student </button>
                    </div>
                </div>
            </div>

            {{!-- Edit Student Modal Details --}}
            <div id="editStudentModal" class="modal">
                <div class="modal-content row">
                    <h4 class="center"> Edit Student </h4>
                    
                    <div class="input-field col s10 offset-s1">
                        <input type="text" id="eSName">
                        <label for="aSName"> Name </label>
                    </div>

                    <div class="input-field col s10 offset-s1">
                        <input type="text" class='gradepicker' data-target='aSGradePicker' id='eSGrade'>
                        <label for="aSGrade"> Grade </label>
                    </div>

                    <div class="input-field col s10 offset-s1">
                        <input type="text" class="datepicker" id="eSBirthday">
                        <label for="aSBirthday"> Birthday </label>
                    </div>

                    <div class="input-field col s10 offset-s1">
                        <input type="text" class="autocomplete" id="eSLocation">
                        <label for="aSLocation"> Location </label>
                    </div>

                    <div class="col s6 offset-s3">
                        <button class="btn esb" id="editStudentButton"> Edit Student </button>
                    </div>
                </div>
            </div>
                    
            <a class='sort-trigger btn' href='#' data-target='sortList' id='sortDD'> Sort By </a>

